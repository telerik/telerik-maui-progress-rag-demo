        <Setter Property="TextColor" Value="{StaticResource ChatTypeIndicatorColor}" />
        <Setter Property="DotsColor" Value="{StaticResource ChatTypeIndicatorColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="Margin" Value="{OnPlatform Default='0, 0, 0, -20', Android='0, 0, 0, -10', iOS='0, 0, 0, -10'}" />
    </Style>

