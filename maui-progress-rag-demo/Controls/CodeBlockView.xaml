<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerikMaui="clr-namespace:Telerik.Maui;assembly=Telerik.Maui.Core"
             xmlns:helpers="clr-namespace:MauiProgressRagDemo.Helpers"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="MauiProgressRagDemo.Controls.CodeBlockView">
    <telerik:RadBorder Background="#ccfafafa"
                       BorderBrush="#1F212529"
                       BorderThickness="1"
                       Padding="12, 8"
                       Margin="0, 4"
                       CornerRadius="6">
        <Grid ColumnDefinitions="*,Auto">
            <!-- Code content -->
            <Label Grid.Column="0"
                   x:Name="CodeLabel"
                   FontFamily="Courier New"
                   FontSize="13"
                   TextColor="Black"
                   VerticalOptions="Center"
                   Margin="0, 0, 8, 0"
                   LineBreakMode="WordWrap"/>

            <!-- Copy button -->
            <telerik:RadTemplatedButton Grid.Column="1"
                                        VerticalOptions="Center"
                                        Style="{StaticResource CopyButtonStyle}"
                                        helpers:DesktopUtils.MouseOverCursorType="Hand"
                                        Clicked="OnCopyClicked" MinimumWidthRequest="22" MinimumHeightRequest="22"
                                        CornerRadius="4">
                <telerik:RadTemplatedButton.ContentTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="0">
                            <Image Source="copyicon.png"
                                   Aspect="AspectFit"
                                   HeightRequest="14"
                                   WidthRequest="14" />
                            <Label Grid.Column="1" 
                                   Text="{Binding Content, Source={RelativeSource AncestorType={x:Type telerik:RadTemplatedButton}}}"
                                   FontSize="{Binding FontSize, Source={RelativeSource AncestorType={x:Type telerik:RadTemplatedButton}}}"/>
                        </Grid>
                    </DataTemplate>
                </telerik:RadTemplatedButton.ContentTemplate>
            </telerik:RadTemplatedButton>
        </Grid>
    </telerik:RadBorder>
</ContentView>
