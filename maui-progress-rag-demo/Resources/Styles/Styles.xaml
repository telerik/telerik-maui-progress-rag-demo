    <telerik:StringToBoolConverter x:Key="ChatPickerStringToBoolConverter" />

    <DataTemplate x:Key="ChatCardActionTemplate">
        <telerik:CardActionView x:Name="view"
                                helpers:DesktopUtils.MouseOverCursorType="Hand"
                                telerik:StyleHelper.InheritedStyleClass="{Binding Source={x:Reference view}, Path=Parent.ActualStyleClass}"
                                Text="{Binding Text}" VerticalOptions="Start"
                                Command="{Binding Command}"
                                TextColor="{StaticResource ActionTextColor}" />
    </DataTemplate>

    <ControlTemplate x:Key="ChatImageCardViewControlTemplate">
        <telerik:RadBorder x:Name="PART_MainContainer"
                           BorderBrush="#EBECEF"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="35, 16"
                           AutomationId="RadChatImageCard">
            <telerik:RadBorder.Shadow>
                <Shadow Brush="#000000" Opacity="0.08" Offset="0,2" Radius="4" />
            </telerik:RadBorder.Shadow>
            <Grid RowDefinitions="Auto, *, Auto">
                <Grid>
                    <Image Source="{TemplateBinding Image}"
                           VerticalOptions="FillAndExpand"
                           Aspect="Center" />
                </Grid>
                <Grid Grid.Row="1"
                      VerticalOptions="Start"
                      RowDefinitions="Auto, *"
                      RowSpacing="4" IsVisible="False">
                    <VerticalStackLayout>
                        <Label Text="{TemplateBinding Title}"
                               Style="{TemplateBinding ActualTitleStyle}"
                               IsVisible="{TemplateBinding Title, Converter={StaticResource ChatPickerStringToBoolConverter}}" />
                        <Label Text="{TemplateBinding Subtitle}"
                               Style="{TemplateBinding ActualSubtitleStyle}"
                               IsVisible="{TemplateBinding Subtitle, Converter={StaticResource ChatPickerStringToBoolConverter}}" />
                    </VerticalStackLayout>
                    <Label Grid.Row="1"
                           Text="{TemplateBinding Description}"
                           LineBreakMode="WordWrap"
                           MaxLines="4"
                           Style="{TemplateBinding ActualDescriptionStyle}"
                           IsVisible="{TemplateBinding Description, Converter={StaticResource ChatPickerStringToBoolConverter}}" />
                </Grid>
                <telerik:RadBorder Grid.Row="2"
                                   BorderThickness="0">
                    <telerik:CardActionsListView telerik:StyleHelper.InheritedStyleClass="{TemplateBinding ActualStyleClass}"
                                                 ItemsSource="{TemplateBinding Actions}"
                                                 ItemTemplate="{StaticResource ChatCardActionTemplate}" />
                </telerik:RadBorder>
            </Grid>
        </telerik:RadBorder>
    </ControlTemplate>




    <Style TargetType="telerik:ImageCardView" ApplyToDerivedTypes="True">
        <Setter Property="ControlTemplate" Value="{DynamicResource ChatImageCardViewControlTemplate}" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style TargetType="telerik:RadChatPicker">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="MinimumWidthRequest" Value="238" />
        <Setter Property="MinimumHeightRequest" Value="200" />
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <ContentPresenter HorizontalOptions="{TemplateBinding HorizontalOptions}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

