            <telerik:RadLayout Grid.Column="1">
                <Image Source="draweruser.png" Aspect="Center" HorizontalOptions="End" />
                <telerik:RadBorder Style="{TemplateBinding ActualBorderStyle}" Margin="0, 4, 42, 8">
                    <Label Text="{TemplateBinding Item.Text}" Style="{TemplateBinding ActualLabelStyle}" />
