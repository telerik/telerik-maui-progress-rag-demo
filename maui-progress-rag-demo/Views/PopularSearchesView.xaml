<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:helpers="clr-namespace:MauiProgressRagDemo.Helpers"
             x:Class="MauiProgressRagDemo.Views.PopularSearchesView"
             x:Name="root">
    <telerik:RadWrapLayout HorizontalOptions="{Binding HorizontalOptions, Source={x:Reference root}}"
                           VerticalOptions="{Binding VerticalOptions, Source={x:Reference root}}"
                           Orientation="{Binding Orientation, Source={x:Reference root}}"
                           Margin="{Binding Padding, Source={x:Reference root}}"
                           BindableLayout.ItemsSource="{Binding ItemsSource, Source={x:Reference root}}">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <telerik:RadTemplatedButton
                    Content="{Binding .}"
                    helpers:DesktopUtils.MouseOverCursorType="Hand"
                    Style="{Binding ButtonStyle, Source={x:Reference root}}"
                    Command="{Binding Command, Source={x:Reference root}}"
                    CommandParameter="{Binding .}" />
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </telerik:RadWrapLayout>
</ContentView>