<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                    xmlns:helpers="clr-namespace:MauiProgressRagDemo.Helpers"
                    xmlns:controls="clr-namespace:MauiProgressRagDemo.Controls"
                    xmlns:behaviors="clr-namespace:MauiProgressRagDemo.Behaviors"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <telerik:CornerRadiusToThicknessConverter x:Key="CornerRadiusToThicknessConverter" />
    <telerik:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />

    <OnPlatform x:Key="PageTopOverlapMargin" x:TypeArguments="Thickness">
        <On Platform="WinUI" Value="0, -48, 0, 0" />
        <On Platform="Default" Value="0" />
    </OnPlatform>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" />
        <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
        <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                            <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                            <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource SecondaryDarkText}}" />
        <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource SecondaryDarkText}}" />
        <Setter Property="Shell.DisabledColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
        <Setter Property="Shell.UnselectedColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray200}}" />
        <Setter Property="Shell.NavBarHasShadow" Value="True" />
        <Setter Property="Shell.FlyoutBackgroundColor" Value="Transparent" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource Magenta}, Dark={StaticResource White}}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{AppThemeBinding Light={StaticResource Magenta}, Dark={StaticResource White}}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource White}}" />
        <Setter Property="IconColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource Magenta}, Dark={StaticResource White}}" />
        <Setter Property="UnselectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
        <Setter Property="SelectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
    </Style>

    <!--My styles-->

    <Thickness x:Key="PageMarginLeftRight">32, 0</Thickness>


    <x:Double x:Key="MaximumContentWidth">770</x:Double>

    <VisualStateGroupList x:Key="EmptyVisualStates">
        <VisualStateGroup Name="CommonStates">
            <VisualState Name="Normal" />
            <VisualState Name="MouseOver" />
            <VisualState Name="Focused" />
            <VisualState Name="Disabled" />
        </VisualStateGroup>
    </VisualStateGroupList>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="MetricRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource DefaultTextColor}" />
    </Style>

    <Style x:Key="BaseLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="MetricRegular" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource DefaultTextColor}" />
    </Style>

    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="MetricMedium" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource DefaultTextColor}" />
    </Style>

    <Style x:Key="SubHeaderLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#535b6a" />
        <Setter Property="FontFamily" Value="MetricRegular" />
        <Setter Property="FontSize" Value="{OnIdiom Default=22, Desktop=20}" />
    </Style>

    <Style x:Key="Header24LabelStyle" TargetType="Label" BasedOn="{StaticResource HeaderLabelStyle}">
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style x:Key="Header36LabelStyle" TargetType="Label" BasedOn="{StaticResource HeaderLabelStyle}">
        <Setter Property="FontSize" Value="36" />
    </Style>

    <Style x:Key="RagValueHeaderLabelStyle" TargetType="Label" BasedOn="{StaticResource Header24LabelStyle}">
        <Setter Property="Margin" Value="6, 0, 0, 0" />
    </Style>

    <Style x:Key="AgenticRagValueBackgroundGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource PageGradientPinkBackground}"/>
        <Setter Property="InputTransparent" Value="True"/>
        <Setter Property="Margin" Value="{OnPlatform Default=0, Android='-32, -20, -32, 0', iOS='-32, -20, -32, 0'}"/>
    </Style>

    <Style x:Key="AgenticRagValueBackgroundRectangleStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="{StaticResource PageGradientPinkBackground}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="InputTransparent" Value="True"/>
        <Setter Property="Margin" Value="{OnPlatform Default=0, Android='-32, -20, -32, 0', iOS='-32, -20, -32, 0'}"/>
    </Style>

    <Style x:Key="DefaultGradientTextViewStyle" TargetType="controls:GradientTextView">
        <Setter Property="FontSize" Value="{OnPlatform Android=40, iOS=40, MacCatalyst=53, WinUI=53}" />
        <Setter Property="Gradient" Value="{DynamicResource DefaultGradientBrush}" />
        <Setter Property="LetterSpacing" Value="0.15" />
        <Setter Property="LineHeight" Value="{OnPlatform Default=1.1, Android=0.95, WinUI=0.75}" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>

    <Style x:Key="ShadowGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{OnPlatform Default={DynamicResource PageShadowBrush}, Android=Transparent, iOS=Transparent}" />
        <Setter Property="HeightRequest" Value="6" />
        <Setter Property="ZIndex" Value="1" />
        <Setter Property="IsVisible" Value="{OnPlatform Default=False, Android=True, iOS=True}" />
    </Style>

    <Style x:Key="HomeCardBorderStyle" TargetType="telerik:RadBorder">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderColor}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="HoverStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#FFFFFF" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="ShadowBorderBoxStyle" TargetType="telerik:RadBorder">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="Padding" Value="{OnIdiom Phone='8, 16', Default='12, 24'}" />
        <Setter Property="Margin" Value="{OnIdiom Phone='0, 8, 0, 0', Default='0, 12, 0, 0'}" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#000000"
                        Offset="0, 1"
                        Opacity="0.08"
                        Radius="3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RagValueResultsShadowBorderBoxStyle" TargetType="telerik:RadBorder">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="BorderBrush" Value="#FFFFFF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="24, 20" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#000000"
                        Offset="0, 1"
                        Opacity="0.08"
                        Radius="3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="HomeCardTemplate">
        <telerik:RadBorder x:Name="Border"
                           Background="#FFFFFF"
                           Padding="2"
                           CornerRadius="18">
            <telerik:RadBorder.Shadow>
                <Shadow Offset="0,2" Radius="{OnPlatform Default=7, iOS=4}" Brush="#20000000" />
            </telerik:RadBorder.Shadow>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter TargetName="Border" Property="Background" Value="#FFFFFF" />
                            <Setter TargetName="PART_EffectsView" Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                            <Setter Property="Opacity" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource HomeCardPointerOverBrush}" />
                            <Setter TargetName="PART_EffectsView" Property="Background" Value="#FFFFFF" />
                            <Setter Property="Opacity" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource HomeCardPressedOverBrush}" />
                            <Setter TargetName="PART_EffectsView" Property="Background" Value="#FFFFFF" />
                            <Setter Property="Opacity" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Disabled">
                        <VisualState.Setters>
                            <Setter TargetName="Border" Property="Background" Value="#FFFFFF" />
                            <Setter TargetName="PART_EffectsView" Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                            <Setter Property="Opacity" Value="0.6" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <telerik:RadEffectsView x:Name="PART_EffectsView"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="{TemplateBinding CornerRadius, Converter={StaticResource CornerRadiusToThicknessConverter}}"
                                    Padding="{TemplateBinding Padding}">
                <ContentPresenter telerik:ContentPresenterUtils.Content="{TemplateBinding ActualContent}" />
            </telerik:RadEffectsView>
        </telerik:RadBorder>
    </ControlTemplate>

    <Style x:Key="HomeCardButtonStyle" TargetType="telerik:RadTemplatedButton">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="17" />
        <Setter Property="WidthRequest" Value="{OnIdiom Phone=-1, Default=240}" />
        <Setter Property="HeightRequest" Value="76" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="{OnIdiom Phone='12,3', Desktop=7}" />
        <Setter Property="HorizontalOptions" Value="{OnIdiom Phone=FillAndExpand, Default=Center}" />
        <Setter Property="ControlTemplate" Value="{StaticResource HomeCardTemplate}" />
    </Style>

    <Style x:Key="HomeCardContentLayoutStyle" TargetType="HorizontalStackLayout">
        <Setter Property="Spacing" Value="8"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <Style x:Key="HomeCardLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="MetricRegular"/>
        <Setter Property="TextColor" Value="Black"/>
    </Style>

    <!-- END DEMO CARD STYLES -->
    <Style x:Key="ShareButtonStyle" TargetType="telerik:RadTemplatedButton">
        <Setter Property="FontFamily" Value="MetricRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource ButtonTextColor}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="12, 4" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="helpers:DesktopUtils.MouseOverCursorType" Value="Hand" />
        <Setter Property="ToolTipProperties.Text" Value="Interaction is disabled for this demo." />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="Transparent" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{DynamicResource ShareButtonPointerOverBackgroundBrush}" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ShareButtonPointerOverBackgroundBrush}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{DynamicResource ShareButtonPressedBackgroundBrush}" />
                            <Setter Property="BorderBrush" Value="{DynamicResource ShareButtonPressedBorderBrush}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="CopyButtonStyle" TargetType="telerik:RadTemplatedButton" BasedOn="{StaticResource ShareButtonStyle}">
        <Setter Property="MinimumWidthRequest" Value="22" />
        <Setter Property="MinimumHeightRequest" Value="22" />
        <Setter Property="Padding" Value="3, 2" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Courier New" />
    </Style>

    <Style x:Key="ClosePopupButtonStyle" TargetType="telerik:RadTemplatedButton" BasedOn="{StaticResource ShareButtonStyle}">
        <Setter Property="Padding" Value="8, 5, 8, 4" />
        <Setter Property="Margin" Value="0, 16, 16, 0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="TelerikFont" />
        <Setter Property="Content" Value="&#xe858;" />
        <Setter Property="TextColor" Value="{DynamicResource DefaultTextColor}" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="CornerRadius" Value="18" />
    </Style>

    <ControlTemplate x:Key="SearchSendButtonControlTemplate">
        <Grid>
            <telerik:RadEffectsView x:Name="PART_EffectsView"
                                            BackgroundColor="{TemplateBinding BackgroundColor}"
                                            Background="{TemplateBinding Background}"
                                            BorderColor="{TemplateBinding BorderColor}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="{TemplateBinding CornerRadius, Converter={StaticResource CornerRadiusToThicknessConverter}}"
                                            Padding="{TemplateBinding Padding}">
                <ContentPresenter telerik:ContentPresenterUtils.Content="{TemplateBinding ActualContent}" />
            </telerik:RadEffectsView>

            <telerik:RadBorder CornerRadius="23" InputTransparent="True" BorderThickness="3" Margin="-2">
                <telerik:RadBorder.Triggers>
                    <DataTrigger TargetType="telerik:RadBorder"
                                              Binding="{Binding IsPressed, Source={RelativeSource TemplatedParent}}"
                                              Value="True">
                        <Setter Property="BorderBrush" Value="#eef0f2" />
                        <Setter Property="BorderThickness" Value="3" />
                    </DataTrigger>
                </telerik:RadBorder.Triggers>
            </telerik:RadBorder>
        </Grid>
    </ControlTemplate>

    <Style x:Key="SearchSendButtonStyle" TargetType="telerik:RadTemplatedButton">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="#FFFFFF" />
        <Setter Property="Background" Value="#A1B0C7" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="50" />
        <Setter Property="Margin" Value="{OnPlatform Default=0, WinUI='0, 1, 4, 1'}" />
        <Setter Property="helpers:DesktopUtils.MouseOverCursorType" Value="Hand" />
        <Setter Property="ContentTemplate">
            <DataTemplate>
                <Image Aspect="AspectFit"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       Source="search.png"
                       VerticalOptions="Center" />
            </DataTemplate>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="PointerOver" />
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="#a1b0c7" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SearchMoreButtonStyle" TargetType="telerik:RadTemplatedButton" BasedOn="{StaticResource SearchSendButtonStyle}">
        <Setter Property="Margin" Value="{OnPlatform Default='0', WinUI='4'}" />
        <Setter Property="ToolTipProperties.Text" Value="Interaction is disabled for this demo." />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="CornerRadius" Value="26" />
        <Setter Property="ContentTemplate">
            <DataTemplate>
                <Image Aspect="AspectFit"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       Source="plusicon.png"
                       VerticalOptions="Center" />
            </DataTemplate>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="PointerOver" />
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="#f5f7f9" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SearchSpeechToTextButtoStyle" TargetType="telerik:RadTemplatedButton" BasedOn="{StaticResource SearchMoreButtonStyle}">
        <Setter Property="Margin" Value="{OnPlatform Default='4, 0', WinUI='4'}" />
        <Setter Property="ContentTemplate">
            <DataTemplate>
                <Image Aspect="AspectFit"
                       HeightRequest="16"
                       HorizontalOptions="Center"
                       Source="microphoneicon.png"
                       VerticalOptions="Center" />
            </DataTemplate>
        </Setter>
    </Style>

    <ControlTemplate x:Key="PromptInputControlTemplate_WinUI">
        <telerik:RadBorder x:Name="PART_BorderContainer"
                           Background="{TemplateBinding Background}"
                           BackgroundColor="{TemplateBinding BackgroundColor}"
                           BorderColor="{TemplateBinding BorderColor}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           CornerRadius="{TemplateBinding CornerRadius}"
                           Padding="{TemplateBinding ContentPadding}">
            <telerik:RadBorder.Behaviors>
                <behaviors:BorderFocusStateBehavior FocusSource="{x:Reference PART_PromptTextInput}" />
            </telerik:RadBorder.Behaviors>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter TargetName="PART_BorderContainer" Property="telerik:RadBorder.BorderBrush" Value="#CED4DA" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Focused">
                            <VisualState.Setters>
                                <Setter TargetName="PART_BorderContainer" Property="telerik:RadBorder.BorderBrush" Value="{DynamicResource DefaultGradientBrush}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>

            <telerik:RadBorder.Triggers>
                <DataTrigger TargetType="telerik:RadBorder"
                             Binding="{Binding IsFocused, Source={x:Reference PART_PromptTextInput}}"
                             Value="True">
                    <Setter TargetName="PART_BorderContainer" Property="BorderBrush" Value="{DynamicResource DefaultGradientBrush}" />
                </DataTrigger>
            </telerik:RadBorder.Triggers>

            <Grid RowDefinitions="Auto, Auto"
                  RowSpacing="0">
                <telerik:RadAnimatedGrid x:Name="PART_AnimatedGrid"
                                         Grid.Row="1"
                                         RowDefinitions="Auto, Auto, Auto"
                                         ColumnDefinitions="Auto, *, Auto, Auto">

                    <telerik:RadTemplatedButton x:Name="MoreButtonView"
                                                Grid.Row="2"
                                                Style="{StaticResource SearchMoreButtonStyle}"
                                                HorizontalOptions="Start">
                        <telerik:RadTemplatedButton.Behaviors>
                            <behaviors:ToastMessageOnClickBehavior />
                        </telerik:RadTemplatedButton.Behaviors>
                    </telerik:RadTemplatedButton>

                    <telerik:RadTextInput x:Name="PART_PromptTextInput"
                                          Grid.Row="2"
                                          Grid.Column="1"
                                          Grid.ColumnSpan="1"
                                          telerik:RadAnimatedGrid.Row="1"
                                          telerik:RadAnimatedGrid.Column="0"
                                          telerik:RadAnimatedGrid.ColumnSpan="4"
                                          Placeholder="{TemplateBinding Placeholder}"
                                          PlaceholderColor="{TemplateBinding PlaceholderColor}"
                                          Padding="12, 0"
                                          VerticalOptions="Center"
                                          ClearButtonVisibility="Never"
                                          telerik:StyleHelper.InheritedStyleClass="{TemplateBinding ActualStyleClass}"
                                          Keyboard="Text"
                                          Text="{TemplateBinding Message, Mode=TwoWay}"
                                          ReturnCommand="{TemplateBinding SendMessageCommand}"
                                          telerik:KeyboardHelper.IsTranslationSource="True"
                                          AutomationId="RadPromptTextInput">
                        <telerik:RadTextInput.Triggers>
                            <DataTrigger TargetType="telerik:RadTextInput"
                                         Binding="{Binding DisplayMode, Source={RelativeSource TemplatedParent}}"
                                         Value="Expanded">
                                <Setter Property="Grid.Row" Value="1" />
                                <Setter Property="Grid.Column" Value="0" />
                                <Setter Property="Grid.ColumnSpan" Value="4" />
                            </DataTrigger>
                            <DataTrigger TargetType="telerik:RadTextInput"
                                         Binding="{Binding DisplayMode, Source={RelativeSource TemplatedParent}}"
                                         Value="Compact">
                                <Setter Property="Grid.Row" Value="2" />
                                <Setter Property="Grid.Column" Value="1" />
                                <Setter Property="telerik:RadAnimatedGrid.Column" Value="1" />
                                <Setter Property="telerik:RadAnimatedGrid.Row" Value="2" />
                                <Setter Property="telerik:RadAnimatedGrid.ColumnSpan" Value="1" />
                            </DataTrigger>
                        </telerik:RadTextInput.Triggers>
                    </telerik:RadTextInput>

                    <telerik:RadTemplatedButton x:Name="SpeechToTextButton"
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                Style="{StaticResource SearchSpeechToTextButtoStyle}"
                                                HorizontalOptions="Start">
                        <telerik:RadTemplatedButton.Behaviors>
                            <behaviors:ToastMessageOnClickBehavior />
                        </telerik:RadTemplatedButton.Behaviors>
                    </telerik:RadTemplatedButton>

                    <telerik:RadSpeechToTextButton x:Name="PART_SpeechToTextButton"
                                                   Grid.Row="2"
                                                   Grid.Column="2"
                                                   IsEnabled="False"
                                                   IsVisible="False"
                                                   telerik:StyleHelper.InheritedStyleClass="{TemplateBinding ActualStyleClass}"
                                                   Style="{Binding ActualSpeechToTextButtonStyle, Source={RelativeSource AncestorType={x:Type telerik:RadPromptInput}}}"
                                                   AutomationId="RadPromptInputSpeechToTextButton" />

                    <telerik:RadTemplatedButton x:Name="SendButton"
                                                Grid.Row="2"
                                                Grid.Column="3"
                                                Command="{TemplateBinding SendMessageCommand}"
                                                Style="{StaticResource SearchSendButtonStyle}"
                                                ControlTemplate="{StaticResource SearchSendButtonControlTemplate}"
                                                AutomationId="RadPromptInputSendMessageButton">
                        <telerik:RadTemplatedButton.Triggers>
                            <DataTrigger TargetType="telerik:RadTemplatedButton"
                                         Binding="{Binding IsFocused, Source={x:Reference PART_PromptTextInput}}"
                                         Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}" />
                            </DataTrigger>
                        </telerik:RadTemplatedButton.Triggers>
                    </telerik:RadTemplatedButton>

                </telerik:RadAnimatedGrid>
            </Grid>
        </telerik:RadBorder>
    </ControlTemplate>

    <ControlTemplate x:Key="PromptInputControlTemplate">
        <telerik:RadBorder x:Name="OuterBorder"
                           Background="{TemplateBinding BorderBrush}"
