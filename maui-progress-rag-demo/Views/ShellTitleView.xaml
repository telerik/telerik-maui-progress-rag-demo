<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:helpers="clr-namespace:MauiProgressRagDemo.Helpers"
             x:Class="MauiProgressRagDemo.Views.ShellTitleView">
    <HorizontalStackLayout Spacing="8"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           IsVisible="{OnPlatform Default=False, Android=True, iOS=True}"
                           helpers:DesktopUtils.MouseOverCursorType="Hand">
        <HorizontalStackLayout.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="Home" />
        </HorizontalStackLayout.GestureRecognizers>
        <Image Source="{OnIdiom Phone='progresslogocompact.png', Default='progresslogo.png'}"
               Aspect="Center" />
        <Label Text="Agentic RAG + Telerik DevTools"
               Style="{StaticResource HeaderLabelStyle}"
               FontSize="20"
               VerticalOptions="Center" />
    </HorizontalStackLayout>
</ContentView>
